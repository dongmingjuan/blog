<p id="notice"><%= notice %></p>

<h1>Admin Groups</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_groups.each do |admin_group| %>
      <tr>
        <td><%= admin_group.title %></td>
        <td><%= admin_group.description %></td>
        <td><%= link_to 'Show', admin_group %></td>
        <td><%= link_to 'Edit', edit_admin_group_path(admin_group) %></td>
        <td><%= link_to 'Destroy', admin_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

